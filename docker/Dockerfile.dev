FROM rust:1.87-slim

RUN apt-get update && apt-get install -y \
    curl \
    pkg-config \
    libssl-dev \
    libpq-dev \
    netcat-traditional \
    && rm -rf /var/lib/apt/lists/*

RUN cargo install diesel_cli --no-default-features --features postgres
RUN cargo install cargo-watch

WORKDIR /app

EXPOSE 8869